<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:common="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical">


    <com.cashkaro.CommonModules.CommonFontsButton
        android:id="@+id/camera_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/_10sdp"
        android:text="Camera Permission"
        android:textAllCaps="false"
        android:textColor="@color/white"
        common:font="GorditaRegular.otf" />


    <com.cashkaro.CommonModules.CommonFontsButton
        android:id="@+id/locaion_permission"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:textAllCaps="false"
        android:background="@color/colorPrimary"
        android:text="Location Permission"
        android:textColor="@color/white"
        common:font="GorditaRegular.otf" />

</LinearLayout>